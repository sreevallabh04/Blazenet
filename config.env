# Database Configuration
DATABASE_URL=postgresql://blazenet:password@localhost:5432/blazenet_db
POSTGRES_USER=blazenet
POSTGRES_PASSWORD=password
POSTGRES_DB=blazenet_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here-change-in-production

# Streamlit Configuration
STREAMLIT_PORT=8501

# ML Model Configuration
MODEL_PATH=./app/ml/weights/
DEVICE=cpu  # or cpu
BATCH_SIZE=16
MAX_PREDICTION_SIZE=1000000  # pixels

# Data Configuration
DATA_PATH=./data/
RAW_DATA_PATH=./data/raw/
PROCESSED_DATA_PATH=./data/processed/
RASTER_RESOLUTION=30  # meters

# External API Keys (add your own)
OPENWEATHER_API_KEY=your_openweather_api_key
NASA_API_KEY=your_nasa_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/blazenet.log

# Simulation Parameters
MAX_SIMULATION_HOURS=24
SIMULATION_TIME_STEP=1  # hours
CELLULAR_AUTOMATA_GRID_SIZE=512 